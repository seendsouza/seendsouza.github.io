      viewBox="0 0 495 623"
      --
    >
      fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true" >
      <polygon
        fill-rule="evenodd"
        clip-rule="evenodd"
        points="221.12 1002.12 2.83 781 2.83 426.64 198.63 618.27 198.44 783.83 221.12 800.84 246.63 781 246.63 605.24 0 361.44 0 220.41 0 220.41 221.12 0 439.4 221.12 439.4 575.47 243.6 383.85 243.8 218.28 221.12 201.27 195.6 221.12 195.6 396.88 442.24 640.67 442.24 779.58 221.12 1002.12"
        fill="url(#paint0_linear_1805_24383)"></polygon>
      <defs>
        <linearGradient
          id="paint0_linear_1805_24383"
          x1="247.358"
          y1="0"
          x2="247.358"
          y2="622.479"
          gradientUnits="userSpaceOnUse"
        >
          <stop stop-opacity="0.9"></stop>
          <stop offset="1" stop-opacity="0.2"></stop>
        </linearGradient>
